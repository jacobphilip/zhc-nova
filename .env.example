# Core paths
ZHC_STORAGE_ROOT=storage
ZHC_TASK_DB=storage/tasks/task_registry.db
ZHC_TASK_SCHEMA=shared/task-registry/schema.sql

# Policies
ZHC_ROUTING_POLICY=shared/policies/routing.yaml
ZHC_APPROVAL_POLICY=shared/policies/approvals.yaml
ZHC_EXECUTION_POLICY=shared/policies/execution_policy.yaml
ZHC_AUTONOMY_MODE=supervised
ZHC_POLICY_ENFORCEMENT=strict
ZHC_BLOCKED_PROMPT_KEYWORDS=rm -rf|drop database|truncate table|git push --force|force push|delete all
ZHC_CONTEXT_TOKEN_BUDGET=1200
ZHC_CONTEXT_TOKEN_BUDGET_HEAVY=2400
ZHC_COST_LOOKUP_ENABLED=1
ZHC_COST_LOOKUP_TIMEOUT_MS=3000

# OpenCode execution
ZHC_ENABLE_REAL_OPENCODE=0
ZHC_DEFAULT_PROVIDER=openai
ZHC_DEFAULT_MODEL=codex
ZHC_FALLBACK_PROVIDER=openrouter
ZHC_FALLBACK_MODEL=planner-model

# Dispatch (Pi -> Ubuntu)
ZHC_UBUNTU_HOST=TODO_REAL_HOST
ZHC_REMOTE_REPO=/home/TODO_USER/zhc-nova
ZHC_REMOTE_PYTHON=python3

# Telegram integration placeholders
TELEGRAM_BOT_TOKEN=TODO_REAL_SECRET
TELEGRAM_ALLOWED_CHAT_IDS=TODO_REAL_CHAT_IDS
TELEGRAM_POLL_TIMEOUT_SECONDS=30
TELEGRAM_POLL_INTERVAL_SECONDS=1.0

# OpenRouter placeholder
OPENROUTER_API_KEY=TODO_REAL_SECRET
